<?xml version="1.0" encoding="utf8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title><%= config.atom.title %></title>
  <link rel="alternate" type="text/html" href="<%= domain + '/index.html' %>" />
  <link rel="self" type="application/atom+xml" href="<%= domain + '/atom' %>" />
  <id><%= config.atom.id %></id>
  <author>
    <name><%= config.atom.author.name %></name>
    <% if (config.atom.author.uri) { %>
    <uri><%= config.atom.author.uri %></uri>    
    <% } %>
    <% if (config.atom.author.email) { %>
    <email><%= config.atom.author.email %></email>    
    <% } %>
  </author>
  <updated><%= walks[0].updated_at.toISOString() %></updated>
  <generator uri="https://github.com/chez-sugi/nodewalk">nodewalk</generator>
  <% walks.forEach (function (walk) { %>
  <entry>
    <title><%= walk.date  %> : <%= walk.start  %> - <%= walk.end %> (<%= Math.round(walk.length*10)/10 %>km)</title>
    <link rel="alternate" type="text/html" href="<%= domain + '?id=' + walk.id  %>" />
    <id><%= config.atom.id + '/' + walk.id %></id>
    <published><%= walk.created_at.toISOString() %></published>
    <updated><%= walk.updated_at.toISOString() %></updated>
  </entry>
  <% }); %>
</feed>
